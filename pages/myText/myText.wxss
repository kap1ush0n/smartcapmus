/* pages/myText/myText.wxss */

.toping{
  width: 100%;
  height: 280rpx;
  text-align: center;
  position: relative;
}
.toping .box{
  width: 100%;
  height: 100%;
  position: relative;
}
.toping .box>image{
  width: 90%;
  height: 250rpx;
  border-radius: 30rpx;
}
.toping .fonting{
  position: absolute;
  top:40rpx;
  left:70rpx;
  text-align: left;
  height: 100%;
  font-size: 20rpx;
  color:white;
}
.toping .fonting>h2{
  font-size: 32rpx;
  font-weight: 900;
}
.toping .fonting>text{
  font-size: 26rpx;
  line-height: 45rpx;
}
.toping .buton{
  width: 100rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border:2rpx solid white;
  border-radius: 25rpx;
}

.barlist{
  width: 90%;
  margin: auto;
  display:flex ;
  justify-content: space-around;
  margin-top: 20rpx;
}
.barlist>view>view:first-child{
  height: 90rpx;
  width: 90rpx;
  border-radius: 50%;
  margin: auto;
  align-items: center;
  display: flex;
  justify-content: center;
}
.barlist>view>view:last-child{
  font-size: 25rpx;
  text-align: center;
}
.barlist>view>view:first-child>image{
  width: 60rpx;
  height: 45rpx;
}
.barlist .yel{
  background-color: #f6b059;
}
.barlist .pul{
  background-color: #8f6aff;
}
.barlist .reed{
  background-color:#ec1e71 ;
}
.barlist .gre{
  background-color: #03e391;
} 
.barlist .blu{
  background-color: #1e9dff;
}

.tinglist{
  width: 90%;
  margin: auto;
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
.tinglist>view{
  width: 49%;
  height: 200rpx;
  border-radius: 25rpx;
}
.tinglist>view:first-child{
  background: linear-gradient(to right,#feb27a,#ff8260);
}
.tinglist>view:last-child{
  background:linear-gradient(to right,#94f8da,#6ad2e3);
}
.tinglist>view:first-child>image{
  width: 210rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.tinglist>view:last-child>image{
  width: 210rpx;
  height: 200rpx;
  margin-left: 125rpx;
  border-radius: 25rpx;
}
.tinglist>view .text{
  font-size: 30rpx;
  position: absolute;
  top:42%;
  right: 53%;
  color: white;
  line-height: 35rpx; 
}
.tinglist>view .text>view:first-child{
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.tinglist>view .foning{
  font-size: 30rpx;
  position: absolute;
  top:42%;
  right: 26%;
  color: white;
  line-height: 35rpx; 
}
.tinglist>view .foning>view:first-child{
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.runtime{
  width: 90%;
  margin: auto;
  display: flex;
  margin-top: 20rpx;
}
.runtime>view:first-child{
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: #01ad7c;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.runtime>view:first-child>image{
  width: 40rpx;
  height: 30rpx;

}
.runtime>view:last-child{
  font-size: 28rpx;
  line-height: 50rpx; 
  /* 行高 */
}
